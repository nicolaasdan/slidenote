<% @courses.each do |course| %>
  <div class="panel panel-default">
    <div class="panel-heading">

	  <h4><strong><%= course.name %></strong></h4>
	  
	</div>

	<div class="panel-body">
	  <p><%= course.description %></p>
	  <% if current_user.admin? %>
	    <%= link_to "Edit", edit_course_path(course) %>
	    <%= link_to "Delete", course_path(course), method: :delete, data: { confirm: "Are you sure you want to delete this course?"} %>
	  <% end %>

	  <%#= link_to "View Slide", course_slides_path(course) %>
	  <%= link_to "Slides", overview_course_slides_path(course), class: "btn btn-primary" %>
	
    </div>
  </div>
<% end %>