<!DOCTYPE html>
<html>
<head>
  <title>NotitiesApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top" id="custom-bootstrap-menu">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to image_tag("slidenotelogo3.png", size: "115x47", alt: "Brand"), root_path %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
  
  
  <div class="col-sm-6" id="slides">
    <%= yield %>
  </div>

  <div class="col-sm-6" id="comments">

  <div class="container-fluid">
    <% if notice %><div class="alert alert-info"><%= notice %></div><% end %>
    <% if alert %><div class="alert alert-warning"><%= alert %></div><% end %>
  </div>

    <% @slides.order(:id => :asc).each do |slide| %>
      <%= render slide.notes.order(:cached_votes_up => :desc) %>

      <%= simple_form_for([slide, slide.notes.build]) do |f| %>
        <%= f.input :comment, label: "Add a note", required: false, input_html: {:rows => 15}, placeholder: 'Add HTML tags to style your note: <h1>Heading 1</h1>, <b>bold</b>, <i>Italic</i>,...' %>
        <%= f.button :submit %>
      <% end %>
    <% end %>
  </div>

</body>
</html>
